@model IEnumerable<BodegaLucyCF.Models.Distribuidor>

@{
    ViewData["Title"] = "Index";
}

<body class="body">
    <div class="row bg-white border border-dark">
        <div class="container mb-0 pt-0 pl-0 pr-0">
            <div class="row mb-0 pt-0 pl-0 pr-0" style="background-color:#fe9f8b;">
                <h1 class="text-white">Distribuidores</h1>
            </div>
            <div class="row mt-3 pl-0 pr-0">
                <div class="row">
                    <div class="col-md-7">
                        <form class="d-flex">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        </form>
                    </div>
                    <div class="col-md-5 d-flex justify-content-end align-items-end">
                        <p>
                            <a class="btn btn-primary" asp-action="Create">
                                <img src="~/icons/icons8-plus-25.png"></img>
                                Agregar Distribuidor
                            </a>
                            <a class="btn btn-info text-white" asp-action="">
                                <img src="~/icons/icons8-downloading-updates-25.png"></img> Imprimir reporte
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Razon_Social_Distribuidor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RUC_Distribuidor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion_Distribuidor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono_Distribuidor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre_Contacto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono_Contacto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado_Distribuidor)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Razon_Social_Distribuidor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RUC_Distribuidor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion_Distribuidor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono_Distribuidor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_Contacto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono_Contacto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado_Distribuidor)
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Codigo_Distribuidor">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Codigo_Distribuidor">
                                    <i class="bi bi-ticket-detailed"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Codigo_Distribuidor">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
